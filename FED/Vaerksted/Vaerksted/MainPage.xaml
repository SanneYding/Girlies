<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Vaerksted.ViewModels"
             xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Vaerksted.MainPage"
             x:DataType="vm:OpgaveViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Opgave Liste" FontSize="24" HorizontalOptions="Center"/>

            <CollectionView ItemsSource="{Binding Opgaver}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding KundeNavn}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding BilModel}" FontSize="14"/>
                                <Label Text="{Binding Dato, StringFormat='{0:dd/MM/yyyy HH:mm}'}" FontSize="12" TextColor="Gray"/>
                                <Button Text="Se Faktura" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OpgaveViewModel}}, Path=ViewFakturaCommand}" CommandParameter="{Binding}" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button 
                Text="Tilføj Ny Opgave" 
                Command="{Binding AddOpgaveAsync}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>