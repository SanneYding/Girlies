<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Vaerksted.ViewModels"
             xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Vaerksted.OpgaveView"
             x:DataType="vm:OpgaveViewModel"
             >

    <!--
    x:DataType="vm:OpgaveViewModel"


    <ContentPage.BindingContext>
        <vm:OpgaveViewModel />
    </ContentPage.BindingContext>
    -->
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Opgave Liste" FontSize="24" HorizontalOptions="Center"/>

            <CollectionView>
                <!--ItemsSource="{Binding Opgaver}" SelectionMode="None">-->
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <!--<Label Text="{Binding Dato, StringFormat='{0:dd/MM/yyyy HH:mm}'}" FontSize="12" TextColor="Gray"/>-->


                                <!--<Button Text="Se Faktura" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OpgaveViewModel}}, Path=ViewFakturaCommand}" CommandParameter="{Binding}" />-->
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button 
                Text="Tilføj Ny Opgave" 
                Command="{Binding AddOpgaveCommand}" />
            <Entry
                                    Text="{Binding Name}"
                                    WidthRequest="300"
                                    HeightRequest="50"
                                    BackgroundColor="White"
                                    TextColor="Black"
                                    Margin="0,10,0,0"
                                />
            <Entry
                                    Placeholder="Address"
                                    Text="{Binding CustomerAddress}"
                                    WidthRequest="300"
                                    HeightRequest="50"
                                    BackgroundColor="White"
                                    TextColor="Black"
                                    Margin="0,10,0,0"
                                />
            <Entry
                                    Placeholder="car make?"
                                    Text="{Binding CarMake}"
                                    WidthRequest="300"
                                    HeightRequest="50"
                                    BackgroundColor="White"
                                    TextColor="Black"
                                    Margin="0,10,0,0"
                                />
            <Entry
                                    Placeholder="model"
                                    Text="{Binding CarModel}"
                                    WidthRequest="300"
                                    HeightRequest="50"
                                    BackgroundColor="White"
                                    TextColor="Black"
                                    Margin="0,10,0,0"
                                />
            <Entry
                                    Placeholder="License"
                                    Text="{Binding CarLicense}"
                                    WidthRequest="300"
                                    HeightRequest="50"
                                    BackgroundColor="White"
                                    TextColor="Black"
                                    Margin="0,10,0,0"
                                />
            <Entry
                                    Placeholder="work"
                                    Text="{Binding Work}"
                                    WidthRequest="300"
                                    HeightRequest="50"
                                    BackgroundColor="White"
                                    TextColor="Black"
                                    Margin="0,10,0,0"
                                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>