            Title="Book Ny Opgave"
            ContentTemplate="{DataTemplate pages:Opgaver}"
            Route="OpgaveView" />
    </FlyoutItem>

    <!-- Kalender -->
    <FlyoutItem Title="Oversigt over Opgaver" Icon="calendar.png">
        <ShellContent
